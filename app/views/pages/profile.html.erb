<div class="page-container">
  <div class="row">
    <div class="col-9 d-flex flex-column">
      <% if current_user.all_set? %>
        <h2>Hello <%= current_user.name %>,</h2>
        <div class="all-set-alert d-flex justify-content-between align-items-center pr-5">
          <%= image_tag 'logo-coinbase-color.svg', class: "coinbase-logo" %>
          <%= image_tag 'valid-sign.svg', class: "valid-sign" %>
          All set!
        </div>
      <% elsif current_user.coinbase_token? %>

        <div class="d-flex">
          <h2>Hello <%= current_user.name %>,</h2>
          <%= image_tag 'logo-coinbase-color.svg', class: "coinbase-logo" %>
          <%= image_tag 'valid-sign.svg', width: 60 %>
        </div>
        <br>
        <br>
        <div class="paypal-missing-alert">
          Pssst, in order to use our extension, go to your coinbase account and connect your paypal.
        </div>
      <% else %>
        <h2>Hello you,</h2>
        <button class="d-flex justify-content-between align-items-center pr-4 base-btn coinbase-btn">
          <%= image_tag 'logo-coinbase-white.svg', class: "coinbase-logo" %>
          <%= link_to "Connect your Coinbase Wallet", user_coinbase_omniauth_authorize_path %>
        </button>
      <% end %>
      <br>
      <br>
        <button class="base-btn extension-btn">
          <a href="#">download the extension</a>
        </button>
    </div>
    <div class="col-3">
      <%= image_tag 'woman.svg', height: "600px" %>
    </div>
  </div>
</div>
