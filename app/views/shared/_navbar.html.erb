<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="/">
    <%= image_tag 'logo-color.png' %>
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto d-flex align-items-center">
      <% if user_signed_in? %>
        <div class="dropdown">
          <li class="nav-item">
            <img class="avatar-large dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%= asset_path('logo-color.png') %>" />
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/users/edit">My profile</a>
              <%= link_to "Sign out",
                          destroy_user_session_path(@session),
                          method: :delete,
                          data: { confirm: "Are you sure you want to logout ?" },
                          class: "dropdown-item" %>
            </div>
          </li>
        </div>
      <% else %>
        <li class="nav-item">
          <a class="nav-link" href="/users/sign_in">Sign in</a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
